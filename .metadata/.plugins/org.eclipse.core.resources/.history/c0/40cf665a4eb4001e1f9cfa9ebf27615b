$(document).on('ready', function(){
    /* 메인 배너 슬라이드*/
    $('.banner-slide').slick({
        centerMode: true,
        dots: true,
        centerPadding: '20px',
        slidesToShow: 3,
        autoplay:true,
        autoplaySpeed: 3200,
        variableWidth: true,
        infinite:true,
        arrows: false
    });

    /*색션 2 슬라이드*/
    $('.best_slide').slick({
        dots: true,
        slidesToShow: 1,
        autoplay:true,
        autoplaySpeed: 4000,
        variableWidth: true,
        infinite:true,
        arrows: false
    });

    /*헤더 푸더 삽입*/
    $("#headers").load("./layout/header.html");
    $("#footers").load("./layout/footer.html");

});


/*top 버튼 js*/
let topBtn = document.getElementById('topBtn');

const scrollWindow = function () {  
    if (window.scrollY != 0) {
        setTimeout(function () {
        window.scrollTo(0, window.scrollY - 50);
        scrollWindow();
        }, 10);
    }
};

topBtn.addEventListener('click', scrollWindow);
